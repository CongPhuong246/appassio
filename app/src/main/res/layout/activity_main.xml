<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dangnhap334"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#BECF23">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_pin_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Nhập"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/gift334"
                android:layout_marginLeft="260dp"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_marginLeft="310dp"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_notifications_24"
                android:layout_marginLeft="360dp"/>

        </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/dangnhap334"
        android:id="@+id/trangchu_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/trangchu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F3F3F3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/thetv334"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ưu đãi dành cho bạn"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#4A4949"
                android:layout_marginLeft="17dp"/>
            <ImageView
                android:layout_width="230dp"
                android:layout_height="160dp"
                android:src="@drawable/thent334"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tin tức"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#4A4949"
                android:layout_marginLeft="17dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lv_334">

                </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/btchon334"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:id="@+id/igchon334"/>

</RelativeLayout>
